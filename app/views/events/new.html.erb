<%= simple_form_for [@organization, @event] do |f| %>
  <%= f.input :title, label: "Title" %>
  <%= f.input :description, label: "Description"%>
  <%= f.input :part_count, :collection => 1..100, label: "Number of people needed" %>
  <%= f.input :location, label: "Please insert location if applicable" %>
  <%= f.input :date, label: "Please insert post end date if applicable" %>
  <%= f.button :submit, "Upload" %>
<% end %>
<%= link_to "Back", organization_path(@organization) %>

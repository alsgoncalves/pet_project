
<div class="container-fluid p-0">
	<div class="jumbotron jumbotron-fluid">
		<div class="container">
			<h1 class="display-4">Members</h1>
			<p class="lead">This page includes profiles for nonprofits. This is free to members subscribed as an organisation.</p>
		</div>
	</div>
</div>



<div class="container">
	<div class="row">
		<% @selected_organizations.each do |organization| %>
			<div class="col-lg-4 col-md-6 col-sm-10 col-10">
				<a class="card1">
					<% if organization.photos.attached? %>
						<%= cl_image_tag organization.photos[0].key, class: "card-img-top" %>
					<%end%>		
					<h3><%= organization.name.upcase %></h3>
					<p class="small"><%= truncate(organization.description, :length => 60) %></p>
					<div class="go-corner">
						<div class="go-arrow">
							â†’ 
						</div>
					</div>
				</a>
				<%= link_to "Read More", organization_path(organization),  class: "button-card-org" %>
			</div>
		<% end %>	
	</div>
</div>